<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar" android:background="@drawable/gradient_background" app:subtitleTextColor="@android:color/white" app:title="Privacy Policy" app:titleTextColor="@android:color/white" style="@style/ToolbarStyle"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textStyle="bold" android:textColor="#bf000000" android:id="@+id/doesNotCollect" android:background="#ff0000" android:padding="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="The AnYme app does NOT collect the following information: {NOT_COLL}"/>
            <TextView android:textStyle="bold" android:textColor="#bf000000" android:background="#ff974c" android:padding="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="None of your data is sold to third parties. Do note that your data is processed on Firebase and BugFender"/>
            <TextView android:textStyle="bold" android:textColor="#bf000000" android:background="@color/theme_NightBlue_accent" android:padding="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="The AnYme app does collect the following information: "/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerView" android:padding="4dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" style="@style/RecyclerViewWithPadding"/>
            <TextView android:textStyle="bold" android:textColor="#bf000000" android:background="#ff0000" android:padding="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="If you do not want your phone connecting to Firebase then please add it to your Adblocker"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

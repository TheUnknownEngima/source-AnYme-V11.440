                    <TextView android:textSize="16sp" android:textStyle="normal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Add X episodes so that the streaming site can automatically click on the correct episode."/>
                    <EditText android:id="@+id/userInputAnimeSync" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="0" android:maxLength="4" android:inputType="number"/>
                    <TextView android:textSize="12sp" android:textStyle="italic" android:id="@+id/textView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Example: MAL thinks the Anime starts at episode 1 but 9Anime starts counting from Episode 13. In this case you enter 12"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <mehdi.sakout.fancybuttons.FancyButton android:id="@+id/saveAndUpdate" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:layout_marginTop="10dp" android:layout_marginRight="7dp" android:layout_marginBottom="7dp" app:fb_defaultColor="@color/colorPrimary" app:fb_focusColor="@color/button_focus_color" app:fb_fontIconResource="ïƒ‡" app:fb_fontIconSize="16dp" app:fb_iconPaddingRight="10dp" app:fb_iconPosition="1" app:fb_radius="3dp" app:fb_text="SAVE" app:fb_textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>

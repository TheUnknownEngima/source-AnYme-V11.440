        </FrameLayout>
        <TextView android:textSize="12sp" android:id="@+id/seriesTitle" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="BEEP BOOP BEEP BOOP BEEP" android:lines="2" android:minLines="2" android:singleLine="false"/>
        <TextView android:textSize="10sp" android:id="@+id/myWatchingProgress" android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Episode 4/12" android:lines="1" android:singleLine="false"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/cardViewContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:foreground="?android:attr/selectableItemBackground" app:cardCornerRadius="10dp" app:cardElevation="5dp" app:cardPreventCornerOverlap="false">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:layout_width="90dp" android:layout_height="110dp">
            <ImageView android:id="@+id/animeCoverImage" android:layout_width="90dp" android:layout_height="110dp" android:scaleType="centerCrop"/>
            <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="@color/md_white_1000" android:gravity="center" android:layout_gravity="bottom|left|center_vertical|center_horizontal|center|start" android:id="@+id/episodeNumber" android:background="@drawable/textview_user_score" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="EP10"/>
        </FrameLayout>
        <LinearLayout android:orientation="vertical" android:padding="3dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_marginTop="3dp" android:layout_marginRight="5dp" android:layout_marginBottom="3dp">
            <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="18sp" android:textStyle="bold" android:ellipsize="end" android:id="@+id/seriesTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="The Series Title Goes Here Owo" android:maxLines="2" android:layout_toStartOf="@+id/subscribeButton" android:layout_alignParentStart="true"/>
                <ImageView android:id="@+id/subscribeButton" android:padding="5dp" android:clickable="true" android:layout_width="35dp" android:layout_height="35dp" android:src="@drawable/notification_unactive" android:tint="@color/md_white_1000" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="13sp" android:textStyle="bold" android:id="@+id/daysUntil" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TUE" android:layout_alignParentLeft="true"/>
                <TextView android:textSize="13sp" android:textStyle="bold" android:id="@+id/trueTimeUntil" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3D 4H" android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

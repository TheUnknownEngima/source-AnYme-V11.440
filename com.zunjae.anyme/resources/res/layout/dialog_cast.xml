<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/custom_background" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:text="Choose your casting app" style="@style/DialogTitle"/>
    <androidx.cardview.widget.CardView android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" app:elevation="5dp">
        <CheckBox android:textSize="16sp" android:id="@+id/rememberCastingApp" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" android:text="Remember Casting App"/>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerView" android:layout_width="match_parent" android:layout_height="match_parent" style="@style/RecyclerViewWithPadding"/>
</LinearLayout>

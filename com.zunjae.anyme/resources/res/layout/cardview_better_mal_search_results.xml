<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#07000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" app:cardCornerRadius="10dp" app:cardElevation="5dp" app:cardPreventCornerOverlap="false">
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="horizontal" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/animeImage" android:layout_width="90dp" android:layout_height="120dp" android:scaleType="centerCrop"/>
                <LinearLayout android:orientation="vertical" android:paddingLeft="8dp" android:paddingTop="4dp" android:paddingRight="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView android:textSize="15sp" android:textStyle="bold" android:id="@+id/animeTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Anime Placeholder" android:maxLines="2"/>
                    <TextView android:textSize="12sp" android:id="@+id/animeStatus" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="13 Eps | Score: 3"/>
                    <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
                    <TextView android:textSize="13sp" android:id="@+id/animeSynopsis" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="Synopsis" android:maxLines="2"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <mehdi.sakout.fancybuttons.FancyButton android:id="@+id/addToPtwButton" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" app:fb_defaultColor="@color/colorPrimary" app:fb_focusColor="@color/button_focus_color" app:fb_fontIconResource="" app:fb_fontIconSize="16dp" app:fb_iconPaddingRight="10dp" app:fb_iconPosition="1" app:fb_text="Add to Profile"/>
                <mehdi.sakout.fancybuttons.FancyButton android:id="@+id/moreInfoButton" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" app:fb_defaultColor="@color/colorPrimary" app:fb_focusColor="@color/button_focus_color" app:fb_fontIconResource="" app:fb_fontIconSize="16dp" app:fb_iconPaddingRight="10dp" app:fb_iconPosition="1" app:fb_text="More Info"/>
            </LinearLayout>
        </LinearLayout>
        <TextView android:textSize="18sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/nsfwWarningMessage" android:background="#f2000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:text="Potentially NSFW\10Click to Unhide"/>
    </FrameLayout>
</androidx.cardview.widget.CardView>

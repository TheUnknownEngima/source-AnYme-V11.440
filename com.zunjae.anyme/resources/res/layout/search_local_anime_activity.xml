<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/toolbarContainer" android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar android:id="@+id/fastAnimeSearchToolbar" android:background="@drawable/gradient_background" app:subtitleTextColor="@android:color/white" app:title="Local Anime Search" app:titleTextColor="@android:color/white" style="@style/ToolbarStyle"/>
        <com.ferfalk.simplesearchview.SimpleSearchView android:id="@+id/searchView" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </FrameLayout>
    <HorizontalScrollView android:id="@+id/chipGroupHorizontalView" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="5dp" android:layout_below="@+id/toolbarContainer" android:paddingStart="10dp" android:paddingEnd="0dp">
        <com.google.android.material.chip.ChipGroup android:id="@+id/chipGroupContainer" android:layout_width="wrap_content" android:layout_height="wrap_content" app:chipSpacingHorizontal="5dp" app:singleLine="true">
            <com.google.android.material.chip.Chip android:textColor="@android:color/white" android:id="@+id/filterGenres" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Genre" android:textAlignment="center" app:chipBackgroundColor="@color/theme_NightBlue_accent" app:chipIcon="@drawable/quantum_ic_keyboard_arrow_down_white_36" app:chipIconSize="20dp" style="@style/Widget.MaterialComponents.Chip.Action"/>
            <com.google.android.material.chip.Chip android:textColor="@android:color/white" android:id="@+id/filterSeriesType" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Series Type" android:textAlignment="center" app:chipBackgroundColor="@color/theme_NightBlue_accent" app:chipIcon="@drawable/quantum_ic_keyboard_arrow_down_white_36" app:chipIconSize="20dp" style="@style/Widget.MaterialComponents.Chip.Action"/>
            <com.google.android.material.chip.Chip android:textColor="@android:color/white" android:id="@+id/filterMinimumScore" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Minimum Score" android:textAlignment="center" app:chipBackgroundColor="@color/theme_NightBlue_accent" app:chipIcon="@drawable/quantum_ic_keyboard_arrow_down_white_36" app:chipIconSize="20dp" style="@style/Widget.MaterialComponents.Chip.Action"/>
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>
    <FrameLayout android:id="@+id/fragmentContainerFrameLayout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/chipGroupHorizontalView"/>
</RelativeLayout>

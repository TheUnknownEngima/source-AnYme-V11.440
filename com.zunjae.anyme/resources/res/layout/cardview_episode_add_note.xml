            <TextView android:textSize="12sp" android:textStyle="italic" android:id="@+id/episodeNoteCreated" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:hint="January 10" android:layout_weight="1" android:textAlignment="textEnd"/>
        </LinearLayout>
        <ImageButton android:layout_gravity="top|right|center_vertical|center_horizontal|center|end" android:id="@+id/overflowIcon" android:layout_width="wrap_content" android:layout_height="wrap_content" style="?android:attr/actionOverflowButtonStyle"/>
    </FrameLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="16sp" android:gravity="center" android:id="@+id/textNoAnimeFound" android:padding="10dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/no_anime_found_category_summary"/>
    <com.google.android.material.button.MaterialButton android:id="@+id/findNewAnimeButton" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Search by Genres" style="@style/AnYmeButton"/>
    <com.google.android.material.button.MaterialButton android:id="@+id/addAnimeToProfile" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="Search by title" style="@style/AnYmeButton"/>
    <TextView android:textSize="12sp" android:gravity="center" android:id="@+id/textWarningNoShowsWut" android:padding="20dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/loggedInNoShows"/>
</LinearLayout>

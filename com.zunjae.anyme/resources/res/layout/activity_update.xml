<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="vertical" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="30sp" android:gravity="center" android:id="@+id/message" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="There is a new update available!"/>
    <TextView android:textSize="16sp" android:gravity="center" android:id="@+id/description" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="A new version of the AnYme app is available. Please update to get new features and bug fixes."/>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/updateContainer" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:gravity="center" android:id="@+id/version" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="10.97 &gt; 11.00"/>
        <Button android:id="@+id/inAppUpdateButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Download App Update" style="@style/AnYmeButton"/>
        <Button android:id="@+id/changelogButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Read Changelog" style="@style/AnYmeButton"/>
        <TextView android:gravity="center" android:id="@+id/manualUpdateButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/downloadFromGitHub"/>
        <TextView android:gravity="center" android:id="@+id/skipThisUpdate" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="35dp" android:text="Skip this update"/>
    </LinearLayout>
</LinearLayout>

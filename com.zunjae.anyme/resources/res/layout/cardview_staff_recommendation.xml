        <TextView android:textSize="12sp" android:id="@+id/bottomInformation" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginTop="12dp" android:text="6 episodes"/>
        <TextView android:textSize="12sp" android:ellipsize="end" android:id="@+id/recommendedBy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginBottom="6dp" android:text="ZUNJAE" android:lines="1" android:singleLine="false"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
